{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1 class="text text-center">Student</h1>
<div class="container col-md-6 text-center mt-3">
    <table class="table table-success table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Student Id</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Address</th>
            {# <th>Classroom</th> #}
            <th>Student Image </th>
            <th>Actions</th>
            
        </tr>
        </thead>
        <tbody>
                <td>{{ student.id }}</td>
                <td>{{ student.studentId }}</td>
                <td>{{ student.studentName }}</td>
                <td>{{ student.Genre }}</td>
                <td>{{ student.studentDob ? student.studentDob|date('Y-m-d') : '' }}</td>
                <td>{{ student.studentEmail }}</td>
                <td>{{ student.studentAddress }}</td>
            
              {# <td>
              {% for classroom in student.classroom %}
                <a class="text-decoration-none" href="{{path('classroom_detail',{'id':classroom.id})}}">
                <h4 class="text text-primary">{{classroom.className }}</h4>
                </a>
              {% endfor %}
              </td> #}
                <td>
                <img src="{{ asset('images/student/'~student.studentImage) }}"  width="100" height="100">              
                </td>             
                <td>
                     <a href="{{ path('student_edit', {'id': student.id}) }}" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                    <a href="{{ path('student_delete', {'id': student.id}) }}" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                    <br>
                    <a href="{{ path('student_index') }}"class="btn btn-success">Back to list</a>
                </td>
        </tbody>
    </table>
    </div>
{% endblock %}
