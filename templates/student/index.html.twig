{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
<div class="container col-md-6 text-center mt-3">
    <h1 class="text text-center">Student list</h1>
    <a href="{{ path('student_add') }}"type="button" class="btn btn-success" >Add new student</a>
    <br>
    <h5>Number of student: {{ students|length }}</h5>
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th> Student ID
                <br>
                <a class="text-decoration-none" href="{{ path('sort_asc')}}">
                    <img src="{{asset('images/system/up.jpg') }}" width="20" height="20">
                </a>
                <a class="text-decoration-none" href="{{ path('sort_desc')}}">
                    <img src="{{asset('images/system/down.jpg') }}" width="20" height="20">
                </a>           
                </th>
                <th>Student Name</th>
                <th>Genre</th>
                <th>Student Date of Birth</th>
                <th>Student Email</th>
                <th>Student Address</th>
                <th>Student Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.studentId }}</td>
                <td>{{ student.studentName }}</td>
                <td>{{ student.genre }}</td>
                <td>{{ student.studentDob ? student.studentDob|date('Y-m-d') : '' }}</td>
                <td>{{ student.studentEmail }}</td>
                <td>{{ student.studentAddress }}</td>
                <td>
                  <a href="{{path('student_detail', {'id': student.id})}}">
                    <img src="{{ asset('images/student/'~student.studentImage) }}"  width="100" height="100">
                </td>
                <td>
                    <a href="{{ path('student_detail', {'id': student.id}) }}" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                    <a href="{{ path('student_delete', {'id': student.id}) }}" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No student found, please add more!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
